<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:RAMEditor.Resources"
                    xmlns:root="clr-namespace:RAMEditor">

    <Style TargetType="TabControl" x:Key="FileTabControl">
        <Setter Property="ContextMenu">
            <Setter.Value>
                <ContextMenu>
                    <MenuItem Header="Close" Click="{x:Static root:ButtonLogic.CloseTabClick}"/>
                </ContextMenu>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>