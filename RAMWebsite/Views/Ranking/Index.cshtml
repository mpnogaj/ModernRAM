@model IEnumerable<User>

<h1>Ranking</h1>

<table id="rankingTable" class="table table-striped table-bordered table-sm">
    <thead>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Rozwiązane zadania</th>
        </tr>
    </thead>
    <tbody>
        @foreach(User u in Model)
        {
        <tr class="cursor-pointer">
            <th>@u.Name</th>
            <th>@u.Surname</th>
            <th>@u.SolvedTasks.Count</th>
        </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script src="~/lib/datatables/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#rankingTable').DataTable({
                "language": {
                    "url": "/lib/datatables/lang/Polish.json"
                }
            });
        });
    </script>
}