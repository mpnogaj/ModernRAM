@model 			User
@{
    ViewData["Title"] = "Project RAM";
    string returnUrl = Context.Request.Query["returnurl"];
}

<h1 class="ml-3">Rejestracja</h1>
<hr>

<form id="registerForm" method="post">
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="UserName"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="UserName">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Password"></label>
        <div class="col-sm-10">
            <input type="password" class="form-control" asp-for="Password">
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="ConfirmPassword"></label>
        <div class="col-sm-10">
            <input type="password" class="form-control" asp-for="ConfirmPassword">
            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Name"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Surname"></label>
        <div class="col-sm-10">
            <input type="text" class="form-control" asp-for="Surname">
            <span asp-validation-for="Surname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2" asp-for="Email"></label>
        <div class="col-sm-10">
            <input type="email" class="form-control" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Zarejestruj się</button>
        </div>
    </div>
</form>


@section Scripts {
    <script src="~/js/registerPage.js" type="text/javascript"></script>
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
